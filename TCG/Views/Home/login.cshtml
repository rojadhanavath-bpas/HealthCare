
@model HealthcareAnalytics.Models.LoginModel
@{  
    ViewBag.Title = "Home Page";
}
@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="login-container login-form">
        <div class="long-shadow">«The Chappelle Group » </div>
        <div class="panel panel-default">
            <div class="panel-body">

                <h4 style="text-align:center"> Login to your Account</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
               
                    <div class="form-group" style="padding-left:10%;">
                        @*@Html.LabelFor(model => model.user_web_login, htmlAttributes: new { @class = "control-label" })*@
                        @Html.EditorFor(model=> model.username, new { htmlAttributes = new { @class = "form-control", placeholder = "User Name" } })

                        @Html.ValidationMessageFor(model => model.username, " ", new { @class = "text-danger" })
                        <span class="glyphicon glyphicon-user"></span>
                  
                </div>

                    <div class="form-group" style="padding-left:10%;">
                       @*@Html.LabelFor(model => model.user_web_pwd, htmlAttributes: new { @class = "control-label col-md-4" })*@          

                        @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control", placeholder = "Password" } })

                        @Html.ValidationMessageFor(model => model.password, " ", new { @class = "text-danger" })
                        <span class="glyphicon glyphicon-lock"></span>            
                    
                </div>

                
                <div class="form-group">
                    <div style="width:100%;margin-top:15px;padding-left:120px;">
                        <input type="submit" style="width:100px!important;" value="Login " class="btn btn-primary">
                        <br />
                        <br />
                   </div>
                        <div class="form-group">
                            <ul style="list-style-type: none; font-size: 17px; padding-left: 10px;">
                                <li class="control-label col-md-6">@Html.ActionLink("Forgot Password ?", "index", "Email")</li>
                                <li class="col-md-6">@Html.ActionLink("Create Account", "create", "Email")</li>
                            </ul>
                        </div>                    

                </div>
            </div>
        </div>
</div>
<div id="particles-js"></div>
}