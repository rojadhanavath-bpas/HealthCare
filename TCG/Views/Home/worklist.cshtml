
@{
    ViewBag.Title = "TCG - Worklist";
}
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title> Index </title>

</head>
<body>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <form>
            <div class="container">
                <div class="panel panel-body">
                    <div id="id_cases" class="panel-body tab-pane fade in active">

                        <div>
                            <h4><strong>Follow-up Due Today Worklists</strong></h4>

                        </div>
                        <hr />

                        <div>
                            <ul class="list-group" style=" background-color:none !important; font-weight: bold;">
                                <li class="list-group-item list-group-item-info"><i class="fa fa-chevron-circle-right"></i> &nbsp;@Html.ActionLink("PRIORITY 1- Denial resolution pending > 3 days ", "priority", "Home") </li>
                                <li class="list-group-item list-group-item-info"><i class="fa fa-chevron-circle-right"></i> &nbsp;@Html.ActionLink("PRIORITY 2- Follow up Due > 3 days", "priority", "Home") </li>
                                <li class="list-group-item list-group-item-info"><i class="fa fa-chevron-circle-right"></i> &nbsp;@Html.ActionLink("PRIORITY 3- Follow up Due- High $", "priority", "Home")  </li>
                                <li class="list-group-item list-group-item-info"><i class="fa fa-chevron-circle-right"></i> &nbsp;@Html.ActionLink("PRIORITY 4- Follow up Due- Low to High $", "priority", "Home")  </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    }

</body>
</html>