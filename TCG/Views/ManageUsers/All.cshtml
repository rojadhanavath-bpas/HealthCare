@model IEnumerable<HealthcareAnalytics.Models.ManageUsersModel>

@{
    ViewBag.Title = "All";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="All">
    <div class="row">
        <br />
    </div>
    <br />

    <div class="row">
        <div class="col-md-1">

        </div>
        <div class="col-md-10">
            @Html.ActionLink("Create New", "AddUser", new { }, new { @class = "btn btn-success" })
        </div>
        <div class="col-md-1">

        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-1">

        </div>
        <div class="col-md-10">


            <table class="table table-striped">
                <tr>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.FirstName)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.LastName)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.UserRole)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.PhoneNumber)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.EmailId)
                    </th>

                    <th scope="col">Actions</th>
                    <th scope="col"> Status</th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <i class="fa fa-user-circle fa-lg"></i> &nbsp; @Html.DisplayFor(modelItem => item.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserRole)
                        </td>
                        <td>
                            <i class="fa fa-phone fa-lg"></i> &nbsp;  @Html.DisplayFor(modelItem => item.PhoneNumber)
                        </td>
                        <td>
                            <i class="fa fa-envelope fa-lg"></i> &nbsp;  @Html.DisplayFor(modelItem => item.EmailId)
                        </td>

                        <td>
                            @Html.ActionLink("Edit", "User", new { id = item.UserID }, new { @class = "badge badge-primary" })  |

                            @Html.ActionLink("Details", "Details", new { id = item.UserID }, new { @class = "badge badge-primary" }) |
                            @Html.ActionLink("Delete", "Remove", new { id = item.UserID }, new { @class = "badge badge-danger" })

                        </td>
                        <td>
                            <div class="btn-group btn-toggle">
                                <button class="btn btn-xs  @(  !Convert.ToBoolean(item.IsActive) ? "active btn-default" : "btn-primary")">Active</button>
                                <button class="btn btn-xs @(  Convert.ToBoolean(item.IsActive) ? "active btn-default" : "btn-primary")">Inactive</button>
                            </div>
                        </td>

                    </tr>
                }

            </table>
        </div>
        <div class="col-md-1">

        </div>
    </div>
    <div class="row">
        <div class="col-md-1">

        </div>
        <div class="col-md-10">
            @Html.ActionLink("Back to List", "All","ManageUsers", new { }, new { @class = "btn btn-primary" })
        </div>

        <div class="col-md-1">

        </div>
    </div>
</div>




