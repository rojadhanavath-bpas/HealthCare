@model HealthcareAnalytics.Models.PwdChange
@{
    ViewBag.Title = "ChangePassword";
}
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@*@{
        Layout = "~/Views/Shared/_LoginLayout.cshtml";
    }*@
<div class="container changepassword">
    @using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post, new { @class = "my_form" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            
                <div class="panel panel-default">
                    <div class="panel-body">
                        <h3 style="text-align:center; color:#dba560;">Create Your Account Here!</h3>


                        @Html.ValidationSummary(true, null, new { @class = "text-danger" })



                        <div class="form-group">
                            @Html.LabelFor(model => model.current_pwd, htmlAttributes: new { @class = "control-label col-md-5" })
                            <div class="col-md-7">
                                @Html.EditorFor(model => model.current_pwd, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.current_pwd, null, new { @class = "text-danger" })
                            </div>

                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.new_pwd, htmlAttributes: new { @class = "control-label col-md-5" })
                            <div class="col-md-7">
                                @Html.EditorFor(model => model.new_pwd, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.new_pwd, null, new { @class = "text-danger" })
                            </div>

                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.retype_pwd, htmlAttributes: new { @class = "control-label col-md-5" })
                            <div class="col-md-7">
                                @Html.EditorFor(model => model.retype_pwd, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.retype_pwd, null, new { @class = "text-danger" })
                            </div>

                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-5 col-md-7">
                                <input type="submit" value="Change Password" class="btn btn-primary" />
                            </div>
                        </div>
                        @*<div>
                            @Html.ActionLink("Back to Login", "Login", "Home")
                        </div>*@

                    </div>
                </div>
            </div>
        


    }
</div>