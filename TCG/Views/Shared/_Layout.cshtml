<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title - TCG</title>
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/jquery")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/font-awesome.css")
    @Styles.Render("~/Content/font-awesome")
    @Styles.Render("~/Content/fontawesome")
    @Scripts.Render("~/bundles/datetime")

    <script>
        $(document).ready(function () {
            $('a[href="' + this.location.pathname + '"]').parent().addClass('active');
                    });
    </script>

</head>
<body>
    <div class="navbar navbar-fixed-top">
           @if (Request.Url.PathAndQuery != "/pulse" || Request.Url.PathAndQuery != "/pulse/")
            {
           
        <ul class="nav navbar-nav">
            <li><span class="logo">&nbsp;<img src="~/Images/hennepin healthcare new logo.png" style="height: 50px; width:auto; padding-top: 1px;" /></span></li>
            <li class="dropdown arstyle">
                <a href="@Url.Action("Coding", "Home")" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">AR Management<span class="caret"></span></a>
                <ul class="dropdown-menu" role="menu">
                    <li>@Html.ActionLink("AR Management", "ARManagement", "Home")</li>
                    <li>@Html.ActionLink("Debit AR", "DebitAR", "Home")</li>
                    <li>@Html.ActionLink("Credit AR", "CreditAR", "Home")</li>
                </ul>
            </li>
            <li class="dmstyle">@Html.ActionLink("Denials Management", "DenialsManagement", "Home")</li>
            @*<li class="dmstyle">@Html.ActionLink("Receivable Management", "worklist_Home", "WorkDriver")</li>*@
            <li class="dropdown arstyle">
                <a href="#" class="dropdown-toggle" role="button" aria-expanded="false" data-toggle="dropdown">Receivable Management <span class="caret"></span></a>
                <ul class="dropdown-menu" role="menu">
                    <li>@Html.ActionLink("Old Workdriver", "Worklist", "Home")</li>
                    <li>@Html.ActionLink("New Workdriver", "worklist_Home", "WorkDriver")</li>
                </ul>
            </li>
            <li class="dmstyle">@Html.ActionLink("Manage Users", "Index", "Users_Data")</li>
            @*<ul class="nav navbar-nav navbar-right">*@
            <li class="dropdown userstyle" style="right:-40%;">
                <a href="#" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="fa fa-user-circle fa-lg"></i> &nbsp; @ViewBag.UserFirst @ViewBag.UserLast <span class="caret"></span>
                </a>
                <ul class="dropdown-menu">
                    <li><a href="@Url.Action("LogOff", "Home")"><i class="fa fa-sign-out" aria-hidden="true"></i> Sign Out </a></li>
                </ul>
        </ul>                   
                    }
                </div>

      <div class=" body-content">
        @RenderBody()

       <footer>
            <div class="footer">
                <span>All Rights Reserved 2018&reg;</span>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>