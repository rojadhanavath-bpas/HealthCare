
@model PagedList.IPagedList<HealthcareAnalytics.Models.Get_AR_Info_for_Balance_Range_Result>
@using PagedList.Mvc;


@{
    ViewBag.Title = "User Account List";
}

<html>
<head>
    @*<link href="//cdn.datatables.net/1.10.16/css/jquery.dataTables.min.css" src="stylesheet">
        <script src="js/jquery.js" type="text/javascript"></script>
        <script src="js/jquery.dataTables.js" type="text/javascript"></script>
        <script src="//cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>*@
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

    <link href="@Url.Content("~/Content/themes/base/minified/jquery-ui.min.css")" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap-responsive.min.css" rel="stylesheet" type="text/css" />
    <!-- Required jQuery and jQuery UI Javascript references -->
    <script src="@Url.Content("~/Scripts/jquery-ui-1.12.1.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-1.12.1.min.js")"></script>
    <script src="~/scripts/jquery-3.2.1.min.js" type="text/javascript"></script>
    <script src="~/scripts/bootstrap.min.js" type="text/javascript"></script>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js" type="text/javascript"></script>
    <script src="~/scripts/twitter-bootstrap.js" type="text/javascript"></script>

    <script type="text/javascript">
        $(function () {
            $("table.tablesorter").tablesorter({ widthFixed: true, sortList: [[0, 0]] })
                .tablesorterPager({ container: $("#pager"), size: $(".pagesize option:selected").val() });
        });
    </script>

</head>
<body>

    @using (Html.BeginForm("UserAcc_List", "WorkDriver", FormMethod.Get, new { @class = "search-wrapper cf" }))
    {
        @Html.AntiForgeryToken()
        <form>
            <div class="container-fluid w-75">
                <div class="panel panel-body">
                    <div id="id_cases" class="panel-body tab-pane fade in active">

                        <div style="border:3px solid #fcbf49; background-color:#fcbf49">
                            <h4>
                                <span style=" font-size:large">
                                    User's Account List
                                </span>
                            </h4>
                        </div>
                        <hr />



                        <div class="row">
                            <div class="col-sm-2">
                                @*<div class="row"><label for="StudentName">Financial Class</label></div>*@

                            </div>

                            <div class="col-sm-2">
                                @*<div class="row"><label for="StudentName">Current Payor</label></div>
                                    <div class="row"><label for="StudentName">Name</label></div>*@
                            </div>

                            <div class="col-sm-2">
                                @*<div class="row"><label for="StudentName">Denial Category</label></div>
                                    <div class="row"><label for="StudentName">Name</label></div>*@
                            </div>

                            <div class="col-sm-2">
                                @*<div class="row"><label for="StudentName">Encounter Type</label></div>
                                    <div class="row"><label for="StudentName">Name</label></div>*@
                            </div>

                            <div class="col-sm-2">
                                <p>
                                    @Html.TextBox("SearchString", ViewBag.CurrentFilter as string, new { placeholder = "Search by payor, or Account ID", @class = "form-control" })
                                    <!--  <input type="submit" class="btn btn-primary" value="Search" />-->
                                </p>
                            </div>

                        </div>


                        <div class="row">
                            <div class="col-sm-12">
                                <table id="myDatatable" class="table pre-scrollable table-sm table-condensed table-striped table-bordered ">
                                    <thead class="thead-dark bg-dark">
                                        <tr>
                                            <th>
                                                @Html.ActionLink("Account ID", "UserAcc_List", new { sortOrder = ViewBag.sort_AccountID })
                                            </th>
                                            <th>@Html.ActionLink("Admission Date", "  ")</th>
                                            <th>@Html.ActionLink("Patient Name", "UserAcc_List ", new { sortOrder = ViewBag.sort_PatientName })</th>
                                            <th>@Html.ActionLink("Current Financial Class", "  " )</th>
                                            <th>@Html.ActionLink("Payor Name", "UserAcc_List", new { sortOrder = ViewBag.sort_PayorName })</th>
                                            <th>@Html.ActionLink("Account Balance", "  ")</th>
                                            <th>@Html.ActionLink("Admitting Provider", "  ")</th>
                                            <th>@Html.ActionLink("Encounter Type", "  ")</th>
                                            <th>@Html.ActionLink("Service Area", "  ")</th>
                                            <th>@Html.ActionLink("# of cases", "  ")</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>
                                                    @Html.ActionLink((@Html.DisplayFor(modelItem => item.Hospital_Account_ID)).ToString(), "prioirty_CaseList", "Home", new { id = item.Hospital_Account_ID }, null)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.New_DischargeDate)
                                                </td>
                                                <td>@Html.DisplayFor(modelItem => item.Account_Patient_Name)</td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Primary_Coverage_Payor_Financial_Class)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Primary_Coverage_Payor_Name)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Total_Account_Balance)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Admitting_Provider_Name)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Encounter_Type)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Account_Service_Area_Name)
                                                </td>
                                                <td>1</td>

                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class=" center-block align-self-md-center paging-wrapper">
                                        <span class="text-primary center-block align-self-md-center">Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount</span>

                                        @Html.PagedListPager(Model, page => Url.Action("priority",
                         new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
        </form>
    }
</body>

</html>
