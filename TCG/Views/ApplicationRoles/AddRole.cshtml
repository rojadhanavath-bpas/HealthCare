@model HealthcareAnalytics.Models.ApplicationRoles
@{
    ViewBag.Title = "AddRole";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container registration">
    @using (Html.BeginForm("AddRole", "ApplicationRoles", FormMethod.Post, new { @class = "my_form" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @*<div class="login-container login-form">*@
            <div class="panel panel-default">
                <div class="panel-body">
                    <h3 style="text-align:center; color:#dba560;">Create Your Account Here!</h3>


                    @Html.ValidationSummary(true, null, new { @class = "text-danger" })

                    <div class="form-group">
                        @Html.LabelFor(model => model.Role_Name, htmlAttributes: new { @class = "control-label col-md-5" })
                        <div class="col-md-7">
                            @Html.EditorFor(model => model.Role_Name, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Role_Name, null, new { @class = "text-danger" })
                        </div>

                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Role_Description, htmlAttributes: new { @class = "control-label col-md-5" })
                        <div class="col-md-7">
                            @Html.EditorFor(model => model.Role_Description, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Role_Description, null, new { @class = "text-danger" })
                        </div>
                    </div>

                    
                </div>
            </div>
        </div>
    }


