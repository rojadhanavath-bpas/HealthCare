@model HealthcareAnalytics.Models.ViewModel

@{
    ViewBag.Title = "Create";
}
@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
<div class="container">
    @using (Html.BeginForm("CreateAccount", "Email", FormMethod.Post, new { @class = "my_form" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <div class="login-container login-form">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <h3 style="text-align:center; color:#dba560;">Create Your Account Here!</h3>


                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="form-group">
                            @Html.LabelFor(model => model.user_info.user_first_name, htmlAttributes: new { @class = "control-label col-md-4" })
                            <div class="col-md-7">
                                @Html.EditorFor(model => model.user_info.user_first_name, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.user_info.user_first_name, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-md-1"></div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.user_info.user_last_name, htmlAttributes: new { @class = "control-label col-md-4" })
                            <div class="col-md-7">
                                @Html.EditorFor(model => model.user_info.user_last_name, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.user_info.user_last_name, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-md-1"></div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.user_info.user_middle_name, htmlAttributes: new { @class = "control-label col-md-4" })
                            <div class="col-md-7">
                                @Html.EditorFor(model => model.user_info.user_middle_name, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.user_info.user_middle_name, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-md-1"></div>
                        </div>


                        <div class="form-group">
                            @Html.LabelFor(model => model.user_info.user_phone_number, htmlAttributes: new { @class = "control-label col-md-4" })
                            <div class="col-md-7">
                                @Html.EditorFor(model => model.user_info.user_phone_number, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.user_info.user_phone_number, "", new { @class = "text-danger" })
                                @Html.ValidationMessageFor(model => model.user_info.user_phone_number, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-md-1"></div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.user_info.user_email_id, htmlAttributes: new { @class = "control-label col-md-4" })
                            <div class="col-md-7">
                                @Html.EditorFor(model => model.user_info.user_email_id, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.user_info.user_email_id, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-md-1"></div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.user_info.user_web_pwd, htmlAttributes: new { @class = "control-label col-md-4" })
                            <div class="col-md-7">
                                @Html.EditorFor(model => model.user_info.user_web_pwd, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.user_info.user_web_pwd, " ", new { @class = "text-danger" })
                            </div>
                            <div class="col-md-1"></div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.user_info.confirm_pwd, htmlAttributes: new { @class = "control-label col-md-4" })
                            <div class="col-md-7">
                                @Html.EditorFor(model => model.user_info.confirm_pwd, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.user_info.confirm_pwd, " ", new { @class = "text-danger" })
                            </div>
                            <div class="col-md-1"></div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-5 col-md-7">
                                <input type="submit" value="Create" class="btn btn-primary" />
                            </div>
                        </div>


                        @if (ViewBag.Message != null)
                        {
                            <div class="alert alert-danger" role="alert">

                                @Html.Raw(ViewBag.Message)
                            </div>
                        }


                        <div>
                            @Html.ActionLink("Back to Login", "Login", "Home")
                        </div>

                    </div>
                </div>
            </div>
        </div>
   

}


