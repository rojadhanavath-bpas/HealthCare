
@model HealthcareAnalytics.Models.role
@{
    ViewBag.Title = "Home Page";
}
@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}


@using (Html.BeginForm())
{

    @Html.AntiForgeryToken()
    
    <div class="login-container login-form">
        <div class="long-shadow">	« Pulse » </div>
        <div class="panel panel-default">
            <div class="panel-body">

                <h4 style="text-align:center"> Login to your Account</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.cst_web_login, htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                       
                        @Html.EditorFor(model => model.cst_web_login, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.cst_web_login, " ", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                   
                    @Html.LabelFor(model => model.cst_web_password, htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                      
                        @Html.EditorFor(model => model.cst_web_password, new { htmlAttributes = new { @class = "form-control" } })
                        
                        @Html.ValidationMessageFor(model => model.cst_web_password, " ", new { @class = "text-danger" })
                    </div>
                </div>

                <hr />
                <div class="form-group">
                    <div style="width:100%;margin-top:100px;padding-left:30px;">


                        <input type="submit" style="width:360px!important;
                            " value="Login " class="btn btn-primary">

                    </div>

                </div>
            </div>
        </div>
</div>
<div id="particles-js"></div>
}