<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Scripts.Render("~/bundles/jquery")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/font-awesome.css")
    @Styles.Render("~/Content/font-awesome")
    @Styles.Render("~/Content/fontawesome")
    <script>
        $(document).ready(function () {
            $('a[href="' + this.location.pathname + '"]').parent().addClass('active');
            $('a[href="' + this.location.pathname + '"]').parent().parent().parent().addClass('active');

        });
    </script>

</head>
<body>
    <div class="">

        @if (Request.Url.PathAndQuery != "/addi" || Request.Url.PathAndQuery != "/addi/")
        {

            <div class="navbar navbar-inverse navbar-fixed-top">
                @*<div class="container">*@
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a href='@Url.Action("Login", "Home")' class=""><img src="~/Images/ADDI_Logo.jpg" /></a>
                    @*@Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Executive Summary", "ExecutiveSummary", "Home")</li>

                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" role="button" aria-expanded="false" data-toggle="dropdown">Financial Management <span class="caret"></span></a>
                            <ul class="dropdown-menu" role="menu">
                                <li>@Html.ActionLink("Financial Management", "Financial_Management", "Home")</li>
                                <li>@Html.ActionLink("Financial RVU", "RVU", "Home")</li>
                            </ul>
                        </li>

                        <li>@Html.ActionLink("Billing", "Billing", "Home")</li>

                        <li class="dropdown">
                            <a href="@Url.Action("ARManagement", "Home")" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">AR Management<span class="caret"></span></a>
                            <ul class="dropdown-menu" role="menu">
                                <li>@Html.ActionLink("AR Management", "ARManagement", "Home")</li>
                                <li>@Html.ActionLink("Debit AR", "debitAR", "Home")</li>
                                <li>@Html.ActionLink("Credit AR", "creditAR", "Home")</li>
                            </ul>
                        </li>

                        <li>@Html.ActionLink("Denials Management", "DenialsManagement", "Home")</li>
                        <li>@Html.ActionLink("Charge Liquidation", "ChargeLiquidation", "Home")</li>

                        <li class="dropdown">
                            <a href="@Url.Action("Coding", "Home")" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Coding Requirement<span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Coding Requirement ", "Coding", "Home")</li>
                                <li>@Html.ActionLink("Established & New Patient", "newpatient", "Home")</li>
                                <li>@Html.ActionLink("Initial &Subsequent", "subsequent", "Home")</li>
                            </ul>
                        </li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li class="dropdown">
                            <a href="#" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="fa fa-user-circle fa-lg"></i> &nbsp; @ViewBag.UserFirst @ViewBag.UserLast <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">
                                <li><a href="@Url.Action("LogOff", "Home")"><i class="fa fa-sign-out" aria-hidden="true"></i> Sign Out </a></li>
                            </ul>
                        </li>

                        @*<li>@Html.ActionLink("Contact", "Contact", "Home")</li>*@
                    </ul>
                </div>
            </div>

        }

    </div>

    <div class=" body-content">
        @RenderBody()

        <footer>
            <div class="footer">
                <span>All Rights Reserved 2018&reg;</span>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>