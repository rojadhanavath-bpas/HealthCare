                                    <li><a href='@Url.Action("creditAR", "Home")'>Credit AR</a></li>
                                </ul>
                            </li>
                            <li><a href='@Url.Action("DenialsManagement", "Home")'>Denials Management</a></li>
                            <li><a href='@Url.Action("ChargeLiquidation", "Home")'>Charge Liquidation</a></li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Coding<span class="caret"></span></a>
                                <ul class="dropdown-menu" role="menu">
                                    <li><a href='@Url.Action("Coding", "Home")'>Coding</a></li>
                                    <li><a href='@Url.Action("newpatient", "Home")'>Established & New Patient</a></li>
                                    <li><a href='@Url.Action("subsequent", "Home")'>Initial & Subsequent</a></li>
                                </ul>
                            </li>
                        </ul>

                        <ul class="nav navbar-nav navbar-right top-right">
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                    <i class="fa fa-user-circle fa-lg"></i> &nbsp; @ViewBag.UserFirst @ViewBag.UserLast
                                    <span class="caret"></span>
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a id="jiraTicketCollector"><i class="glyphicon glyphicon-question-sign" aria-hidden="true"></i> Support </a></li>
                                    <li><a href="@Url.Action("login", "Home" )"><i class="fa fa-sign-out" aria-hidden="true"></i> Sign Out </a></li>
                                </ul>
                            </li>
                        </ul>
                    </div><!-- /.navbar-collapse -->


                </div>

            </div>


