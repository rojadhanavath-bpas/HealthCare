                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        @*<a href='@Url.Action("Login", "Home")' class="navbar-brand"><img class="img-responsive" src="~/Images/ADDI_Logo.jpg" /></a>*@

                    </div>
                    <div class="navbar-collapse collapse " id="bs-example-navbar-collapse-1">

                        <ul class="nav navbar-nav  list-inline" style="margin-left: 18%;">
                            <li><a href='@Url.Action("ExecutiveSummary", "Home")'>Executive Summary</a></li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Financial Management<span class="caret"></span></a>
                                <ul class="dropdown-menu" role="menu">
                                    <li><a href='@Url.Action("Financial_Management", "Home")'>Financial Management</a></li>
